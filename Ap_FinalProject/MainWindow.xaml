<Window x:Class="Ap_FinalProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ap_FinalProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="395">
            <TabItem Header="MainTab" Height="20" VerticalAlignment="Top" >
                <Grid Background="#FFE5E5E5" Margin="0,0,0,-118">
                    <TextBox Name="Text1" HorizontalAlignment="Left" Height="50" TextWrapping="Wrap" Text="Please type what you want!" VerticalAlignment="Top" Width="234" TextChanged="TextBox_TextChanged"/>
                    <Button Content="Calculate" HorizontalAlignment="Left" VerticalAlignment="Top" Width="53" Height="28" Margin="284,22,0,0" RenderTransformOrigin="0.5,0.5" Click="Button_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
